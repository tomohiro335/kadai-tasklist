<% if logged_in? %>


  <div class="row">
    <aside class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
      <p>
      <%= current_user.name %>
      さん、こんにちは！</p>
      <%= form_for(@task) do |f| %>
      
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
        <%= f.label :status, 'タスクのステータス' %>
        <%= f.select :status, Status.status_choices, {:prompt => "選択してください"}, {:class => 'form-control', rows: 5} %>
      </div>
      
      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
      
      <% end %>
      <br>
    </aside>
    
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
      <%= render 'tasks/tasks', tasks: @tasks, user: @user %>
    </div>
  </div>

<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>タスク管理アプリへようこそ！</h1>
      
<%= link_to '登録してみよう', signup_path, class: 'btn btn-lg btn-primary' %>

    </div>
  </div>
<% end %>