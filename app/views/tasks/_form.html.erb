<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-offset-3 col-lg-6">
    <%= form_for(@task) do |f| %>
    
    <% if task.errors.any? %>
    
    <div class="alert alert-warning">
      
      <ul>
        
        <% task.errors.full_messages.each do |message| %>
        
        <li>
          <%= message %>
        </li>
        
        <% end %>
        
      </ul>
    </div>
    
<% end %>
<div class="form-group">
  
<%= f.label :content, 'タスク' %>

<%= f.text_field :content, class: 'form-control' %>

</div>
<div class="form-group">
  
<%= f.label :status, 'タスクのステータス' %>

<%#= f.text_field :status %>

<%# テスト collection_selectはデフォのもので、複雑なので人によっては使わない%>
<%# simple formとかが使われやすい %>
<%#= f.collection_select :status, Status.all, :id, :content %>
<%= f.select :status, Status.status_choices, {:prompt => "選択してください"}, {:class => 'form-control'} %>

</div>

<%= f.submit '登録', class: 'btn btn-primary' %>

<% end %>
    
  </div>
</div>
